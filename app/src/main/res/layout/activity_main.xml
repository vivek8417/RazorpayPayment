<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et_contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Contact No."
        android:layout_above="@+id/et_email"
        android:layout_centerHorizontal="true"
        android:inputType="number"
        android:maxLength="10"
        />
    <EditText
        android:id="@+id/et_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Email Address"
        android:layout_above="@+id/et_amount"
        android:layout_centerHorizontal="true"
        android:inputType="textEmailAddress"
        />
    <EditText
        android:id="@+id/et_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Amount"
        android:inputType="numberDecimal"
        android:layout_above="@+id/tv_razorpay_signature"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tv_razorpay_payment_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="razorpay_payment_id :"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/btn_pay"/>
    <TextView
        android:id="@+id/tv_razorpay_order_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="razorpay_order_id :"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_razorpay_payment_id"/>
    <TextView
        android:id="@+id/tv_razorpay_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="razorpay_signature :"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/tv_razorpay_order_id"/>

    <Button
        android:id="@+id/btn_pay"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="pay_with_razorpay" />

